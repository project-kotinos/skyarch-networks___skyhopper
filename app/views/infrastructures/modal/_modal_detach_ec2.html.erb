<%# modal for change schedule %>
<div id="detach-ec2-modal" class="modal fade" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header bg-warning">
        <button class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Detach Instance #{{physical_id}}</h4>
      </div>

      <div class="modal-body">
        <h4 class="alert alert-warning"><%= glyphicon 'warning-sign' %> Warning</h4>
        <p>
          <%= t('ec2_instances.msg.detach') %>
          <div class="input-group">
            <div class="checkbox">
              <label>
                <input type="checkbox" checked="true" v-model="x_zabbix"> Zabbix
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" checked="true" v-model="x_chef"> Chef
              </label>
            </div>
          </div>
        </p>
      </div>

      <div class="modal-footer">
        <div v-if="!loading_s">
          <button class="btn btn-default" data-dismiss="modal" aria-hidden="true"><%= t('helpers.links.cancel') %></button>
          <button @click="detach_ec2()" data-dismiss="modal" class="btn btn-warning"><%= t('helpers.links.detach') %></button>
        </div>
        <div-loader v-else-if="loading_s"></div-loader>
      </div>
    </div>
  </div>
</div>
