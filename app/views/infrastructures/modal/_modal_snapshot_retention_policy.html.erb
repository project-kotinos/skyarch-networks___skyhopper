<%# retention-policy modal %>
<div id="retention-policy-modal" class="modal fade" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Retention Policy for {{volume_selected}}</h4>
      </div>

      <div class="modal-body">
        <div class="form-inline form-group">
          <div class="col-md-6">
            <div class="checkbox">
              <label class="control-label">
                <input v-model="editing_policy.enabled" type="checkbox">
                <%= t('snapshots.snapshots_to_keep') %>
              </label>
            </div>
          </div>
          <div class="col-md-3">
            <input class="col-xs-12" :disabled="!editing_policy.enabled" v-model="editing_policy.max_amount" id="editing_policy.max_amount" type="number" min="3" max="999" maxlength="3" required>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <div v-if="!loading">
          <button class="btn btn-default" data-dismiss="modal" aria-hidden="true"><%= t('helpers.links.close') %></button>
          <button @click="save_retention_policy(volume_selected, editing_policy)" :disabled="!is_valid_amount && editing_policy.enabled"  class="btn btn-primary"><%= t('helpers.titles.save') %></button>
        </div>
        <div-loader v-else-if="loading"></div-loader>
      </div>
    </div>
  </div>
</div>
